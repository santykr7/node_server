    <section id="feed-post">
      <h3>Post</h3>
      <% if(locals.user) { %>
         <form action="/posts/create" id="post-form" method="post">
            <textarea name="content" id="" cols="30" rows="3" placeholder="type here..."></textarea>
            <input type="submit" value="Post">
         </form>
        
         <% } %>
      
         <div id="post-container">
            <ul>
               <% for(post of posts) { %>
                  
                  <%- include('_post') -%>

                  <% } %>  
                  

            </ul> 
         </div>
    </section>

    <section id="user-sec">
      <h4>friends</h4>
      <% for(u of all_user) { %>
         <p>
            <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
         </p>
         <% } %>
    </section>