 <h1>Home ejs is loaded</h1>
    <p>codeial / <%= title %></p>


    <section id="feed-post">
      <h3>Post</h3>
      <% if(locals.user) { %>
         <form action="/posts/create" id="post-form" method="post">
            <textarea name="content" id="" cols="30" rows="3" placeholder="type here..."></textarea>
            <input type="submit" value="Post">
         </form>
        
         <% } %>
      
         <div id="post-container">
            <ul>
               <% for(post of posts) { %>
                  <li>
                     <%= post.content %>
                     <br>
                     <small>
                        <%= post.user.name %>
                     </small>
                  </li>
                  <div class="post-comment">
                     <% if(locals.user) { %>
                        <form action="/comments/create" id="post-form" method="post">
                           <input type="text" name="content" placeholder="type comment.." required>
                           <input type="hidden" name="post" value="<%= post._id %>">
                           <input type="submit" value="Comment here">
                        </form>
                        <% } %>

                        <div class="post-comments-list">
                           <ul id="post-comments-<%= post._id %>">
                              <% for (comment of post.comments) { %>
      
                                 <p>
                                    <%= comment.content %>
                                    <br>
                                    <small>
                                       <%= comment.user.name %>
                                    </small>
                                 </p>
                                 <% } %>
                           </ul>
                        </div>
                        
                  </div>
                  <% } %>  
                  

            </ul> 
         </div>
    </section>