 <h1>Home ejs is loaded</h1>
    <p>codeial / <%= title %></p>


    <section id="feed-post">
      <h3>Post</h3>
      <% if(locals.user) { %>
         <form action="/posts/create" id="post-form" method="post">
            <textarea name="content" id="" cols="30" rows="3" placeholder="type here..."></textarea>
            <input type="submit" value="Post">
         </form>
         <% } %>
      
         <div id="post-container">
            <ul>
               <% for(post of posts) { %>
                  <li>
                     <%= post.content %>
                     <br>
                     <small>
                        <%= post.user.name %>
                     </small>
                  </li>
                  <% } %>
            </ul>
         </div>
    </section>